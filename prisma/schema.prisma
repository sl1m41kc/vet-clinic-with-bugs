generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Схема для коллекции PriceList
model PriceList {
  id               String    @id @default(auto()) @map("_id") @db.ObjectId
  sortOrder        Int       @default(0)
  groupTitle       String
  groupDescription String?
  groupNote        String?
  services         Service[]
}

type Service {
  serviceTitle       String
  serviceDescription String?
  servicePricePrefix String?
  servicePrice       Float?
  priceOptions       PriceOption[]
}

type PriceOption {
  optionTitle       String
  optionDescription String?
  optionPricePrefix String?
  optionPrice       Float
}
